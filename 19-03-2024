#inheritance
class parent():
  def property(self):
    print("elvishhhhhhhhhhhh bhai")
class son(parent):
  def value(self):
    print("thara bhai jogindher")
class daughter (son):
  def values(self):
    print("jinga lala hu hu")
s1=daughter()
s1.values()
s1.property()
s1.value()
     
jinga lala hu hu
elvishhhhhhhhhhhh bhai
thara bhai jogindher

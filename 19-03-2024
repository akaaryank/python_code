#inner class
class employee:
  name ="sajid"
  sapid=50012
  def info(self):
    print(self.name,self.sapid)
  class activity:
    def info(self):
      print("jinga lala hu hu")
e1=employee()
e1.info()
e2=employee.activity()
e2.info()
e3=activity()
e3.info()
     
sajid 50012
jinga lala hu hu
jinga lala hu hu

class AssiantProfessor:
  def __int__(self,name,Id):
    self.name=name
    self.Id=Id
    def show():
      print(f"my name is :{self.name}")
      print(f"my id is :{self.Id}")
  class details():
    def show(self):
      print("jinga la la hu hu")
AP=AssiantProfessor.details()
AP.show()

     
jinga la la hu hu

class AssistantProfessor:
  def __init__(self,name,Id):
    self.name=name
    self.Id=Id
    self.MD=self.Details()
  def show(self):
   # print(f"my name is :{self.name}")
    #print(f"my id is :{self.Id}")
    print(self.name,self.Id)
  class Details:
    def show(self):
      print("jinga la la hu hu")
AP1=AssistantProfessor("sajid", 50012)
AP1.show()
AP2=AP1.MD
AP2.show()
     

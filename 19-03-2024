class parent():
  def values(self):
    print("elvishhhhhhhhhhhh bhai")
class son():
  def values(self):
    print("thara bhai jogindher")
class daughter ():
  def values(self):
    print("jinga lala hu hu")

P1=parent()
P2=son()
P3=daughter()
P1.values()
P2.values()
P3.values()
     
elvishhhhhhhhhhhh bhai

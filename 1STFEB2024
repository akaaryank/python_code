a=['yamini','saumya','lava','shresth','aaryan','kushagra'] #list
b=('yamini','saumya','lava','shresth','aaryan','kushagra') #tuple
#difference between them is that list is mutable and tuple is not mutuable
c=print(type(a))
d=print(type(b))
a.remove('yamini')
print(a)
a.append('dhakan')
print(a)
print(a[2:5])
     
